<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Statuses")%>
  <center><h1>Statuses</h1></center>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Calculate for working hours</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.name %></td>
          <td><%= status.counted %></td>
          <td><%= button_to 'Edit', edit_status_path(status), method: :get, class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Update', refresh_statuses_path %>
</div>