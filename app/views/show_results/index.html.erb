<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Different views for report results")%>
  <center><h1>View templates</h1></center>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @show_results.each do |show_result| %>
        <tr>
          <td><%= show_result.name %>
          <td><%= button_to 'Show', show_result_path(show_result), method: :get, class: 'btn btn-info btn-xs' %></td>
          <td><%= button_to 'Edit', edit_show_result_path(show_result), method: :get, class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Destroy', show_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New View Template', new_show_result_path %>