<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Businesses")%>
  <center><h1>Businesses</h1></center>
  <table class="table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Jira tag</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @businesses.each do |business| %>
        <tr>
          <td><h5><%= business.name %></h5></td>
          <td><b><%= business.price %></b> EUR</td>
          <td><%= business.jira_name %></td>
          <td><%= button_to 'Edit', edit_business_path(business), method: :get, class: 'btn btn-info btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
