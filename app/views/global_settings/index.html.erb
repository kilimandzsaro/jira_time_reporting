<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Settings")%>
  <center><h1>Settings</h1></center>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Base64 key</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @global_settings.each do |global_setting| %>
      <tr>
        <td><%= global_setting.name %></td>
        <td><%= global_setting.url %></td>
        <td><%= global_setting.base64_key %></td>
        <td><%= global_setting.active %></td>
        <td><%= button_to 'Get', get_global_settings_path, method: :get, class: 'btn btn-info btn-xs' %></td>
        <td><%= button_to 'Show', global_setting_path(global_setting), method: :get, class: 'btn btn-info btn-xs' %></td>
        <td><%= button_to 'Edit', edit_global_setting_path(global_setting), method: :get, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', global_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Settings', new_global_setting_path %>