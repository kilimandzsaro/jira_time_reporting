<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Settings")%>
  <center><h1><%=@global_setting.name %> Settings</h1></center>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Base64 code</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @global_setting.name %></td>
        <td><%= @global_setting.url %></td>
        <td><%= @global_setting.base64_key %></td>
        <td>
          <% if @global_setting.active %>
            ACTIVE
          <% else %>
            inactive
          <% end %>
        <td><%= button_to 'Edit', edit_global_setting_path(@global_setting), method: :get, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', @global_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  </table>


<%= link_to 'Back', global_settings_path %>
