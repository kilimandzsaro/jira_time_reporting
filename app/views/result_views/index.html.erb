<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Different views for report results")%>
  <center><h1>View templates</h1></center>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @result_views.each do |result_view| %>
        <tr>
          <td><%= result_view.name %>
          <td><%= button_to 'Show', result_view_path(result_view), method: :get, class: 'btn btn-info btn-xs' %></td>
          <td><%= button_to 'Edit', edit_result_view_path(result_view), method: :get, class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Destroy', result_view, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New View Template', new_result_view_path %>