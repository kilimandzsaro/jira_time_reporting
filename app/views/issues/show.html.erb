<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, @issue.issue_key)%>
  <center><h1>History of <%= @issue.issue_key %></h1></center>
  <% @issue_histories.order(:status_id).each do |issue_history| %>
    <% if issue_history.status_id != 5 || issue_history.status_id != 6 || issue_history.status_id != 18 %>
      <table class="table-sm">
        <thead>
          <tr>
            <th width=100><%= Status.find(issue_history.status_id).name %></th>
            <th >Absolute Time: <%= issue_history.get_days %> days <%= issue_history.get_hours %> h <%= issue_history.get_minutes %> m</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td width=100 ><%= Employee.find(issue_history.employee_id).display_name %></td>
            <td><%= issue_history.start_date %> - <%= issue_history.end_date %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  <% end %>
  <%= link_to 'Back', issues_path %>
</div>
