<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Issue Histories")%>
  <center><h1>Issue Histories</h1></center>
  <%= will_paginate @issue_histories, renderer: BootstrapPagination::Rails %>
  <table>
    <thead>
      <tr>
        <th>Issue</th>
        <th>Employee</th>
        <th>Duration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @issue_histories.each do |history| %>
        <tr>
          <td><%= Issue.find(history.issue_id).issue_key %></td>
          <td>
            <% if !history.employee_id.nil? %>
              <%= Employee.find(history.employee_id).display_name %></td>
            <% else %>
              <td>-</td>
            <% end %>
          <td><%= history.duration %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @issue_histories, renderer: BootstrapPagination::Rails %>
</div>