<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= full_title(yield(:title)) %></title>
    <%= javascript_include_tag "http://www.google.com/jsapi", "chartkick", "data-turbolinks-track" => "reload" %>
    <%= yield :charts_js %>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => "reload" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller_name %> <%= action_name%>">
    <%= render "layouts/header" %>
    <div id="wrapper" class="toggled">
      <%= render  partial:"layouts/sidebar" %>
    </div>
    <div id="page-content-wrapper">
      <div class="page-content">
        <div class="container-fluid">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %> col-md-8 col-md-offset-2 main"><%= value %></div>
            <div class="notice notice-<%= key %> col-md-8 col-md-offset-2 main"><%= value %></div>
          <% end %>
          <div class="row">
            <div class="col-md-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render "layouts/footer" %>
    <% debug(params) if Rails.env.development? %> 
  </body>
</html>
