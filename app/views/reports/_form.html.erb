<% if @report.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

    <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field" id="report_name">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, placeholder: "Report's name", :class => "form-control" %>
</div>

<div class="field" id="from_date">
  <%= f.label :from_date %>
  <%= f.date_field :from_date, autocomplete: "off", placeholder: "YYYY-MM-DD", :class => "form-control" %>
</div>

<div class="field" id="to_date">
  <%= f.label :to_date %>
  <%= f.date_field :to_date, autocomplete: "off", placeholder: "YYYY-MM-DD", :class => "form-control" %>
</div>

<div class="field" id="report_type">
  <%= f.label :report_type_id %>
  <%= f.collection_select :report_type_id, ReportType.all, :id, :name, :class=> "form-control" %>
</div>
