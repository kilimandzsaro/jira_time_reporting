<div class="field" id="vacation">
  <%= f.label :vacations %>
  <div class="input_group" %>
    <%= f.collection_select :employee_id, Employee.all, :id, :display_name, placeholder: "", class: 'form-control' %>
    <%= f.label :start_date %>
    <%= f.date_field :start_date, autocomplete: "off", placeholder: "YYYY-MM-DD", class: 'form-control' %>
    <%= f.label :end_date %>
    <%= f.date_field :end_date, autocomplete: "off", placeholder: "YYYY-MM-DD", class: 'form-control' %>
    <%= f.hidden_field :report_id, value: @report.id %>
    <%= button_to 'Add', vacations_path, method: :post, class: 'btn btn-info btn-xs' %>
  </div>
</div>