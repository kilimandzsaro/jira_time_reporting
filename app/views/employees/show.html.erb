<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Employee show")%>
  <center><h1><%= @employee.display_name %></h1></center>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Active?</th>
        <th>Issues</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @employee.name %></td>
        <td><%= @employee.email %></td>
        <td><%= @employee.active %></td>
        <td>
          <% @employee_issues.uniq.each do |ei| %>
            <%= ei %>
          <% end %>
        </td>
        <td><%= button_to 'Edit', edit_employee_path(@employee), method: :get, class: 'btn btn-info btn-xs' %></td>
      </tr>
    </tbody>
  </table>
</div>
<%= link_to 'Back', employees_path %>