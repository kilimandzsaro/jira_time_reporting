<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Employees")%>
  <center><h1>Employees</h1></center>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Jira key</th>
        <th>Jira display name</th>
        <th>Hide?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <% if !employee.hide && !@show_all %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.email %></td>
            <td>
              <% if employee.active? %>
               <font color="#17CA05">Active</font>
              <% else %>
                <font color="#C60606">Inactive</font>
              <% end %>
            </td>
            <td><%= employee.key %></td>
            <td><%= employee.display_name %></td>
            <td><%= link_to 'Hide', employee_hide_and_show_path(employee) %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          </tr>
        <% else %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.email %></td>
            <td>
              <% if employee.active? %>
               <font color="#17CA05">Active</font>
              <% else %>
                <font color="#C60606">Inactive</font>
              <% end %>
            </td>
            <td><%= employee.key %></td>
            <td><%= employee.display_name %></td>
            <% if employee.hide %>
              <td><%= link_to 'Show', employee_hide_and_show_path(employee) %></td>
            <% else %>
              <td><%= link_to 'Hide', employee_hide_and_show_path(employee) %></td>
            <% end %>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <td><%= link_to 'Refresh', refresh_employees_path %></td>
</div>
