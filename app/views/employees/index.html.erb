<div class="col-md-7 col-md-offset-3 main">
  <% provide(:title, "Employees")%>
  <center><h1>Employees</h1></center>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Hide?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <% if !employee.hide && !@show_all %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.email %></td>
            <td><%= employee.status %></td>
            <td><%= link_to 'Hide', hide_and_show_employee_path(employee) %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          </tr>
        <% else %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.email %></td>
            <td><%= employee.status %></td>
            <% if employee.hide %>
              <td><%= link_to 'Show', hide_and_show_employee_path(employee) %></td>
            <% else %>
              <td><%= link_to 'Hide', hide_and_show_employee_path(employee) %></td>
            <% end %>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
